server {
    listen 443 ssl;
    http2 on;
    ssl_certificate /etc/nginx/cert/certificate.crt;
    ssl_certificate_key /etc/nginx/cert/private.key;
    server_name 117.72.155.71;

    access_log /var/log/nginx/online-chat-access.log;
    error_log /var/log/nginx/online-chat-error.log;

    # 修正的静态文件配置
    location /_next/static/ {
        # 文件在 /var/www/online-chat/.next/standalone/static/chunks/...
        alias  /var/www/online-chat/.next/standalone/.next/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header X-Debug "static-fixed";
        try_files $uri =404;
    }

    # 主应用代理
    location / {
        proxy_pass http://127.0.0.1:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

